IF (word(2 $loadinfo()) != [pf]) {
  LOAD -pf $word(1 $loadinfo());
  RETURN;
};

PACKAGE LiCe;

ALIAS gone {
  @ quiet.test = ismset(Q);
  @ :gone.msg = randread($main.reason_gone);
  UNLESS (strlen($gone.msg)) {@ :gone.msg = [http://lice.googlecode.com]};
  SWITCH ($0) {
    () {AWAY $gone.msg};
    (-q) {
      @ quiet.test = 1;
      AWAY ${strlen($1)?[$1-]:gone.msg};
    };
    (*) {AWAY $*};
  };
};
