ALIAS -fmt.sc_max
ALIAS fmt.sc_mid (list) {
  FE ($list) xx {
    @ :mod = pass(@+% $xx)
    @ :spc = mod ? mod : [ ]
    @ :nic = strip(@+% $xx)
    @ :ret #= [3] ## spc ## [] ## [$[9]nic] ## [ ]
  }
  RETURN $ret
}
ALIAS fmt.sc_bot	RETURN $G Channel stats: ops/$1 halfs/$2 non/$4 voc/$3 total/$5
