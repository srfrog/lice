ALIAS fmt.sc_top {
  ECHO $G 14\(16names 14ú 15$014\) 15Listing users on 16$015\(16$numonchannel($0)15\)
  			RETURN 14ÚÄÄ15Ä16-15Ä14ÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ-Ä-Ä15Ä16-15Ä15Ä14Ä--ÄÄ-Ä15Ä-16Ä-Ä 14-Ä15Ä16-Ä- 15-16Ä
}
ALIAS fmt.sc_mid (list) {
  @ :cnt = 0
  FE ($list) xx {
    @ :cnt++
    @ :mod = pass(@+ $xx)
    @ :spc = mod ? mod : [ ]
    @ :nic = strip(@+ $xx)
    @ :ret #= [16] ## spc ## [15] ## [$[10]nic] ## [${cnt!=fmt.sc_max()?[14ú ]:[]}]
  }
  			RETURN 14³ $ret
}
