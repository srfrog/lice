ALIAS fmt.topic_set {
    if ([$1-] == [<No Topic Set>]) {RETURN 14\(16topic 14ú 15$014\) None}
    if ([$1]==[Set]&&[$2]==[by]&&[$4]==[on]) {RETURN 14\(16topic 14ú 15$014\) set by 16$3 on $5-}
    {RETURN 14\(16topic 14ú 15$014\) $1-}
}
