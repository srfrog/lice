ALIAS fmt.whois_bot RETURN $()14ÀÄÄ15Ä16-15Ä14ÄÄÄÄÄÄÄ15Ä16Ä-15ÄÄ15Ä14ÄÄÄ--ÄÄÄ-Ä15ÄÄ-16ÄÄ-Ä 14Ä-Ä15Ä16-ÄÄ- 15-16Ä
ALIAS fmt.whois_mid {
  IF (temp.syn.whois_uh) {
    echo 14³ 16address   14ð15 $sar(/@/14@15/$temp.syn.whois_uh)
    ^assign -temp.syn.whois_uh
  }
  SWITCH ($0) {
    (Ircname)   {RETURN 14³ 16quote     14ð $1-}
    (Domain)    {RETURN 14³ 16domain    14ð $1-}
    (Shitlist)  {RETURN 14³ 16shitinfo  14ð $1-}
    (Userlist)  {RETURN 14³ 16userinfo  14ð $1-}   
    (Channels)  {RETURN 14³ 16channels  14ð $1-}
    (Server)    {RETURN 14³ 16server    14ð $1-}
    (Away)      {RETURN 14³ 16away      14ð $1-}
    (Operator)  {RETURN 14³ 16operator  14ð ..16!@#$15}
    (Signon)    {RETURN 14³ 16signon    14ð $1-}
    (Idle)      {RETURN 14³ 16idle      14ð $1-}
    (Spoof)	{RETURN 14³ 16spoof     14ð $1-}
  }
}
